<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">


			<h1>Editing Book</h1>
			<!-- form_for部分 -->
			<%= form_for(@book) do |f| %>
			<h4>Title</h4>
			<%= f.text_field :title, class: "col-xs-12 book_title"  %>
			<h4>Body</h4>
			<%= f.text_area :body, class: "col-xs-12 book_title"  %>
			<%= f.submit 'Update Book', class: "btn btn-primary col-xs-12" %>
			<% end %>

		</div>
	</div>
</div