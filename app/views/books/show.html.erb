<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <h1>User info</h1>
      <td><%= attachment_image_tag @author, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
      <h4>name</h4>
      <td><%= @author.name %></td>
      <h4>introduction</h4>
      <td><%= @author.introduction %></td>
      <td><%= link_to 'Edit', edit_user_path(current_user.id), class: "btn btn-primary col-xs-12" %></td>


      <h1>New book</h1>
      <!-- form_for部分 -->
      <%= form_for(@book) do |f| %>



      <% if @book.errors.any? %>
      <h3>入力した内容にエラーが<%= @book.errors.count %>件あります</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>



      <h4>Title</h4>
      <%= f.text_field :title, class: "col-xs-12 book_title" %>

      <h4>Body</h4>
      <%= f.text_area :body, class: "col-xs-12 book_title" %>

      <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>

      <% end %>

    </div>
    <div class="col-lg-9">

      <h1>Book detail</h1>
      <table class='table table-hover table-inverse'>
        <tbody>
          <tr>
            <%= link_to @author.name, user_path(@author.id) %>
            <td><%= attachment_image_tag @book_show.user, :profile_image, :fill, 50, 50, format: 'jpeg' %></td>
            <td><%= @book_show.title %></td>
            <td><%= @book_show.body %></td>
            <% if @book_show.user_id == current_user.id %>
            <td><%= link_to 'Edit', edit_book_path %></td>
            <td><%= link_to 'Destroy', book_path, method: :delete, data: { confirm: '削除しますか？' } %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
