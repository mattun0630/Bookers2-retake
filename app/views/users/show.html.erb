<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <h1>User info</h1>
      <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg' ,fallback: "no_image.jpg"%></td>
      <h4>name</h4>
      <td><%= @user.name %></td>
      <h4>introduction</h4>
      <td><%= @user.introduction %></td>
      <td><%= link_to 'Edit', edit_user_path(@user.id), class: "btn btn-primary col-xs-12" %></td>

     

      <h1>New book</h1>
      <!-- form_for部分 -->
      <%= form_for(@book) do |f| %>



      <% if @book.errors.any? %>
      <h3>入力した内容にエラーが<%= @book.errors.count %>件あります</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>



      <h4>Title</h4>
      <%= f.text_field :title, class: "col-xs-12 book_title" %>

      <h4>Body</h4>
      <%= f.text_area :body, class: "col-xs-12 book_title" %>

      <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>

      <% end %>
    </div>
    <div class="col-lg-9">

      <h1>Books</h1>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% if @user.present? %>
          <% @user.books.each do |f| %>
          <tr>
            <td><%= link_to book_path(f) do %>
              <%= attachment_image_tag f.user, :profile_image, :fill, 50, 50, format: 'jpeg' %>
              <% end %></td>
              <td><%= link_to book_path(f) do %>
                <%= f.title %>
                <% end %></td>
                <td><%= f.body %></td>
              </tr>
              <% end %>
              <% end %>

            </tbody>
          </table>
        </div>
      </div>
    </div>